@model IEnumerable<WebCGM.Models.Especialidade>

@{
    ViewBag.Title = "Especialidades";
}

<h2>Especialidades</h2>

<p>
    @Html.ActionLink("Adicionar nova especialidade", "Adicionar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.IDEspecialidade }) |
            @Html.ActionLink("Remover", "Remover", new { id=item.IDEspecialidade }, new { @class = "delete-link" })
        </td>
    </tr>
}

</table>

<div id="delete-dialog" title="Confirmation" style="display:none;">
    <p>Tem a certeza que deseja eliminar a especialidade?</p>
</div>


@section Scripts{
    <script src="~/Scripts/ConfirmationDelete.js" type="text/javascript"></script>
}