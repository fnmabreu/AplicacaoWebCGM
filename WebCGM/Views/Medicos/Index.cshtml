@model IEnumerable<WebCGM.Models.Medico>

@{
    ViewBag.Title = "Medicos";
}

<h2>Médicos</h2>

<p>
    @Html.ActionLink("Adicionar novo médico", "Adicionar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especialidade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cidade.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Especialidade.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.IDMedico }) |
            @Html.ActionLink("Remover", "Remover", new { id=item.IDMedico }, new { @class = "delete-link" })
        </td>
    </tr>
}

</table>

<div id="delete-dialog" title="Confirmation" style="display:none;">
    <p>Tem a certeza que deseja eliminar o médico?</p>
</div>


@section Scripts{
    <script src="~/Scripts/ConfirmationDelete.js" type="text/javascript"></script>
}

