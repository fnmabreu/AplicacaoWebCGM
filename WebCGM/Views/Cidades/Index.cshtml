@model IEnumerable<WebCGM.Models.Cidade>

@{
    ViewBag.Title = "Cidades";
}

<h2>Cidades</h2>

<p>
    @Html.ActionLink("Adicionar nova cidade", "Adicionar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.IDCidade }) |
            @Html.ActionLink("Remover", "Remover", new { id=item.IDCidade }, new { @class = "delete-link" })
        </td>
    </tr>
}
</table>


<div id="delete-dialog" title="Confirmation" style="display:none;">
    <p>Tem a certeza que deseja eliminar a cidade?</p>
</div>


@section Scripts{
    @Scripts.Render("~/bundles/app")
}




